{% extends 'base.html.twig' %}

{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}

{% block title %} Page d'enregistrement {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if not app.user %}
        <h1>Cr√©er un compte</h1>
    {% else %}
        <h1>Modifier mes informations</h1>
    {% endif %}

    {{ form_row(formRegister.nomAbonne) }}
    {{ form_row(formRegister.prenomAbonne) }}
    {{ form_row(formRegister.email) }}
    {{ form_row(formRegister.login) }}
    {{ form_row(formRegister.adresse) }}
    {{ form_row(formRegister.codePostal) }}
    {{ form_row(formRegister.ville) }}
    {{ form_row(formRegister.codePays) }}

    {% if not app.user %}
        {{ form_row(formRegister.password) }}
        {{ form_row(formRegister.confirm_password) }}
        <button type="submit" class="btn btn-success"> S'inscrire </button>
    {% else %}
        <button type="submit" class="btn btn-success"> Modifier mes informations </button>
    {% endif %}
    <p>*Champs obligatoires</p>

</div>

{% endblock %}

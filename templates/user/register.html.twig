{% extends 'base.html.twig' %}

{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}

{% block title %} Page d'enregistrement {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Cr√©er un compte</h1>

    {{ form_start(formRegister) }}

    {{ form_row (formRegister.nomAbonne, {'label' : 'Nom', 
    'attr' : {'placeholder' : 'ex: Dupont' }}) }}
    {{ form_row (formRegister.prenomAbonne, {'label' : 'Prenom', 
    'attr' : {'placeholder' : 'ex: Albert' }}) }}
    {{ form_row (formRegister.email, {'label' : 'Email', 
    'attr' : {'placeholder' : 'ex: email@email.fr' }}) }}
    {{ form_row (formRegister.login, {'label' : 'Identifiant', 
    'attr' : {'placeholder' : 'ex: DupontDu33' }}) }}
    {{ form_row (formRegister.password, {'label' : 'Mot de passe', 
    'attr' : {'placeholder' : 'Mot de passe' }}) }}
    {{ form_row (formRegister.confirm_password, {'label' : 'Confirmer le mot de passe',
     'attr' : {'placeholder' : 'Confirmer le mot de passe' }}) }}
    <button type="submit" class="btn btn-success"> S'inscrire </button>

    {{ form_end(formRegister) }}

</div>

{% endblock %}

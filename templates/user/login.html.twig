{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Connexion</h1>

    <form action="{{ path('user_login') }}" method="post" >

        <div class="form-group">
            <input placeholder="Email" required name="_username" type="text" class="form-control"/>
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control"/>
        </div>
        <div>
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
        <div>
            <p>Pas encore enregistré ?
            <a href="{{ path('user_register')}}">Créer un compte</a></p>
        </div>
        

    </form>

</div>
{% endblock %}
